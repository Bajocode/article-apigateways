{
  "version": 2,
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "extra_config": {
        "github.com/devopsfaith/krakend-ratelimit/juju/router": {
          "maxRate": 10,
          "clientMaxRate": 5,
          "strategy": "ip"
        }
      },
      "backend": [
        {
          "url_pattern": "/auth/login",
          "encoding": "no-op",
          "sd": "dns",
          "method": "POST",
          "host": [
            "identity-service.default"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/auth/register",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/auth/register",
          "encoding": "no-op",
          "sd": "dns",
          "method": "POST",
          "extra_config": {},
          "host": [
            "identity-service.default"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/cart",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
            "alg": "HS256",
            "jwk-url": "http://identity-service.default/jwks.json",
            "disable_jwk_security": true,
            "kid": "userid"
        }
      },
      "backend": [
        {
          "url_pattern": "/{JWT.userid}/cart",
          "encoding": "no-op",
          "sd": "dns",
          "method": "GET",
          "host": [
            "cart-service.default"
          ],
          "disable_host_sanitize": true,
          "is_collection": false
        }
      ]
    },
    {
      "endpoint": "/cart",
      "method": "PUT",
      "output_encoding": "no-op",
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
            "alg": "HS256",
            "jwk-url": "http://identity-service.default/jwks.json",
            "disable_jwk_security": true,
            "kid": "userid"
        }
      },
      "backend": [
        {
          "url_pattern": "/{JWT.userid}/cart",
          "encoding": "no-op",
          "sd": "dns",
          "method": "PUT",
          "host": [
            "cart-service.default"
          ],
          "disable_host_sanitize": true,
          "is_collection": false
        }
      ]
    },
    {
      "endpoint": "/cart",
      "method": "DELETE",
      "output_encoding": "no-op",
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
            "alg": "HS256",
            "jwk-url": "http://identity-service.default/jwks.json",
            "disable_jwk_security": true,
            "kid": "userid"
        }
      },
      "backend": [
        {
          "url_pattern": "/{JWT.userid}/cart",
          "encoding": "no-op",
          "sd": "dns",
          "method": "DELETE",
          "host": [
            "cart-service.default"
          ],
          "disable_host_sanitize": true,
          "is_collection": false
        }
      ]
    }

  ]
}

