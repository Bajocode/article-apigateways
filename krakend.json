{
  "version": 2,
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "extra_config": {},
          "host": [
            "http://identity-service:9005"
          ]
        }
      ]
    },
    {
      "endpoint": "/auth/register",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/register",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "extra_config": {},
          "host": [
            "http://identity-service:9005"
          ]
        }
      ]
    },
    {
      "endpoint": "/cart",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
            "alg": "HS256",
            "jwk-url": "http://identity-service:9005/jwks.json",
            "disable_jwk_security": true,
            "kid": "userid"
        }
      },
      "backend": [
        {
          "url_pattern": "/{JWT.userid}/cart",
          "encoding": "string",
          "sd": "static",
          "method": "GET",
          "extra_config": {},
          "host": [
            "http://cart-service:9002"
          ],
          "disable_host_sanitize": true,
          "is_collection": false
        }
      ]
    }
  ]
}

